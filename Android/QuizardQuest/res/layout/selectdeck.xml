<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/scroll_stock"
>

        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/deck_string"
            android:gravity="center"
            android:layout_marginTop="80sp"
            android:textSize="25sp"
            android:id="@+id/deckwelcome"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/decklistheader"
            android:layout_below="@+id/deckwelcome"
            android:layout_marginTop="80sp"
            android:orientation="vertical">
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/decklist"
            android:textColor="#000000"
            />
	
	<Button
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:id="@+id/start_button"
	    android:textSize="50sp"
	    android:layout_marginTop="50sp"
	    android:layout_gravity="center"
	    android:text="@string/start"
	    android:onClick="beginQuest"
	    />
	</LinearLayout>
</RelativeLayout>
